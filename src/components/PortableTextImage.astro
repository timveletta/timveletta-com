---
import { Image } from 'astro:assets';
import { urlForImage } from "../utils/sanity"

const {asset, alt, width, height} = Astro.props.node

const webpUrl = urlForImage(asset).format('webp').url()
---

<Image
	format="webp"
	loading="lazy"
	class="mx-auto my-8 rounded-md p-2"
	width={width}
	height={height}
	src={webpUrl}
	alt={alt}
/>