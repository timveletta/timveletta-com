---
const formSubmitted = Astro.url.searchParams.get('submit') ? true : false;
---

<iframe name="hiddenFrame" width="0" height="0" style="display: none;"></iframe>
{
	formSubmitted ? (
		<p class="text-primary text-sans font-bold tracking-wide text-2xl px-10 text-center">
			Thank you for getting in contact, I will get back to you at the earliest
			possible convenience.
		</p>
	) : (
		<form
			class="grid grid-cols-1 md:grid-cols-2 md:grid-rows-4 gap-4 justify-start"
			name="contact"
			action="/contact"
			method="POST"
			target="hiddenFrame"
		>
			<label class="sr-only" for="name">
				{' '}
				Name
			</label>
			<input
				aria-label="name"
				id="name"
				type="text"
				name="name"
				required
				placeholder="Your Name"
				class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
			/>
			<label class="sr-only" for="email">
				{' '}
				Email Address
			</label>
			<input
				aria-label="email"
				id="email"
				type="text"
				name="email"
				placeholder="Your Email Address (optional)"
				class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
			/>
			<label class="sr-only" for="subject">
				{' '}
				Subject
			</label>
			<input
				aria-label="subject"
				id="subject"
				type="text"
				name="messageSubject"
				placeholder="Your Subject (optional)"
				class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
			/>
			<label class="sr-only" for="message">
				{' '}
				Message
			</label>
			<textarea
				aria-label="message"
				id="message"
				required
				name="message"
				class="row-span-3 md:col-start-2 md:row-start-1 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
				placeholder="Your Message"
			/>
			<div class="flex items-baseline">
				<button
					type="submit"
					class="bg-primary text-white font-bold px-4 py-2 mr-4 rounded hover:bg-opacity-75"
				>
					Send Message
				</button>
			</div>
		</form>
	)
}
