---
const { frontmatter, url } = Astro.props;
---

<article class="overflow-hidden shadow-md bg-white grid font-sans">
	<img
		src={frontmatter.heroImage}
		alt={`Hero image for post ${frontmatter.title}`}
	/>
	<div class="px-6 py-4">
		<a
			href={frontmatter.externalLink ? frontmatter.externalLink : url}
			target={frontmatter.externalLink ? '_blank' : undefined}
			class="font-bold text-slate-800 text-xl hover:text-primary"
		>
			{frontmatter.title}
		</a>
		<p class="text-gray-500 font-bold text-sm my-2">
			<time datetime={frontmatter.pubDate}>
				{
					new Date(frontmatter.pubDate).toLocaleDateString('en-us', {
						year: 'numeric',
						month: 'long',
						day: 'numeric',
					})
				}
			</time>
		</p>
		<p class="text-slate-700 text-base">{frontmatter.description}</p>
		{
			frontmatter.externalLink && (
				<p class="text-gray-600 font-bold text-base mt-1">[External Link]</p>
			)
		}
	</div>
	<a
		href={frontmatter.externalLink ? frontmatter.externalLink : url}
		target={frontmatter.externalLink ? '_blank' : undefined}
		class="font-bold text-sm mt-2 px-6 py-4 text-primary self-end"
	>
		Read More
	</a>
</article>

