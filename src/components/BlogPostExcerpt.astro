---
import { Image } from '@astrojs/image/components';

const { frontmatter, url } = Astro.props;
---

<article class="flex flex-col overflow-hidden rounded-lg shadow-lg">
	<a href={url} class="flex-shrink-0">
		<Image
			format="webp"
			class="w-full object-cover"
			aspectRatio={16 / 9}
			height={192}
			src={frontmatter.heroImage}
			alt={`Hero image for post ${frontmatter.title}`}
		/>
	</a>
	<div class="flex flex-1 flex-col justify-between bg-white p-6">
		<div class="flex-1">
			<a
				href={url}
				class="text-xl font-semibold text-gray-900 hover:text-primary"
			>
				{frontmatter.title}
			</a>
			<p class="text-primary font-medium text-sm my-2">
				<time datetime={frontmatter.pubDate}>
					{
						new Date(frontmatter.pubDate).toLocaleDateString('en-us', {
							year: 'numeric',
							month: 'long',
							day: 'numeric',
						})
					}
				</time>
			</p>
			<p class="mt-3 text-base text-gray-500">{frontmatter.description}</p>
		</div>
		<div class="mt-6 flex items-center flex-wrap">
			{
				frontmatter.tags.map((tag: string) => (
					<a
						href={`/tags/${tag}`}
						class="flex items-center px-3 py-0.5 mr-1 mb-1 rounded-full text-sm font-medium bg-secondary hover:bg-primary text-white"
					>
						{tag}
					</a>
				))
			}
		</div>
	</div>
</article>
